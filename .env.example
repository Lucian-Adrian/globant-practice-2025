# ====================================
# Database Configuration
# ====================================
POSTGRES_DB=drivingschool
POSTGRES_USER=drivingschool
POSTGRES_PASSWORD=drivingschoolpwd
DB_HOST=db
DB_PORT=5432

# ====================================
# Django Configuration
# ====================================
DJANGO_SECRET_KEY=insecure-dev-key-change-in-production
DJANGO_DEBUG=1
DJANGO_SETTINGS_MODULE=project.settings
DJANGO_ALLOWED_HOSTS=

# ====================================
# Django Superuser (optional)
# ====================================
# Uncomment to automatically create superuser on first run
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_PASSWORD=adminpass
# DJANGO_SUPERUSER_EMAIL=admin@example.com

# ====================================
# Static Files
# ====================================
# Set to 1 to skip collectstatic (recommended for development)
DISABLE_COLLECTSTATIC=1
# Set to 1 to run collectstatic (needed for production)
# DJANGO_COLLECTSTATIC=0

# ====================================
# JWT Authentication
# ====================================
JWT_ACCESS_MINUTES=30
JWT_REFRESH_DAYS=7
# JWT_SIGNING_KEY defaults to DJANGO_SECRET_KEY if not set
# JWT_SIGNING_KEY=your-jwt-signing-key

# ====================================
# Business Configuration
# ====================================
BUSINESS_TZ=Europe/Chisinau
FRONTEND_ORIGIN=http://localhost:3000

# ====================================
# CSRF Configuration
# ====================================
# Set to 1 to disable CSRF for API-only development
DISABLE_CSRF=1

# ====================================
# Frontend Configuration
# ====================================
# These are used by the frontend service
CHOKIDAR_USEPOLLING=true
VITE_API_BASE_URL=http://backend:8000
