# ====================================
# PRODUCTION ENVIRONMENT VARIABLES
# ====================================
# WARNING: This file contains sensitive information
# Never commit this file to version control
# Use secure secrets management in production

# ====================================
# Database Configuration
# ====================================
POSTGRES_DB=drivingschool_prod
POSTGRES_USER=drivingschool_prod
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# ====================================
# Django Configuration
# ====================================
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY
DJANGO_DEBUG=0
DJANGO_SETTINGS_MODULE=project.settings
# Comma-separated list of allowed hosts (your domains)
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ====================================
# Django Superuser
# ====================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com

# ====================================
# Static Files (Production)
# ====================================
DISABLE_COLLECTSTATIC=0
DJANGO_COLLECTSTATIC=1

# ====================================
# JWT Authentication
# ====================================
JWT_ACCESS_MINUTES=30
JWT_REFRESH_DAYS=7
# Use different key from DJANGO_SECRET_KEY for additional security
JWT_SIGNING_KEY=CHANGE_ME_TO_DIFFERENT_RANDOM_KEY

# ====================================
# Business Configuration
# ====================================
BUSINESS_TZ=Europe/Chisinau
FRONTEND_ORIGIN=https://yourdomain.com

# ====================================
# CSRF Configuration (Production - Enable!)
# ====================================
DISABLE_CSRF=0

# ====================================
# Frontend Configuration
# ====================================
VITE_API_BASE_URL=/api

